        "shx": "^0.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "~5.5.4",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4"
    },
    "files": [
        "/dist",
        "LICENSE.txt"
    ],
    "main": "index.js",
    "bin": {
        "basedpyright": "index.js",
        "basedpyright-langserver": "langserver.index.js",
        "pyright": "index.js",
        "pyright-langserver": "langserver.index.js"
    }
